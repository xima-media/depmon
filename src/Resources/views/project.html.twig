<li class="list-group-item-info list-group-item list-header bg-gray"
    data-project="{{ project.self.name }}"
    data-project-type="{{ project.self.projectType is defined ? project.self.projectType }}"
    data-overview="1"
>

    <div class="row">
        <div class="col-7">
            <a data-toggle="collapse" data-target="#{{ key }}">
                <strong>{{ project.self.name }}</strong>
                <small>{{ project.composer.name }}</small>
            </a>
            <button class="filter-project" data-project="{{ project.self.name }}" data-tooltip="Quick filter for this project" flow="down">
                <i class="icon-filter"></i>
            </button>
        </div>
        <div class="col-1 text-center">
            {% if project.meta.gitTag is defined %}
                {{ project.meta.gitTag }}
            {% endif %}
        </div>
        <div class="col-1 text-center">
            {{ project.self.projectType is defined ? project.self.projectType }}
        </div>
        <div class="col-3 text-right">
            <a href="{{ path('xima_depmon_state', {'project': project.self.name}) }}">
                <img src="{{ asset("bundles/ximadepmon/img/states/#{project.meta.projectState}.svg") }}">
            </a>
        </div>
        <div id="{{ key }}" class="collapse col-12 bg-gray">
            <div class="row padding-small">
                <div class="col-3">
                    <strong>{{ project.dependencies|length }}</strong> total dependencies
                </div>
                <div class="col-3">
                    <strong>{{ project.meta.requiredPackagesCount }}</strong> required
                    dependencies
                </div>
                <div class="col-2">
                    <div class="state state-1"></div> {{ project.meta.statesCount.1 }} up to date
                </div>
                <div class="col-2">
                    <div class="state state-2"></div> {{ project.meta.statesCount.2 }} up to date
                </div>
                <div class="col-2">
                    <div class="state state-3"></div> {{ project.meta.statesCount.3 }} out of date
                </div>
                <div class="col-12 padding-small">
                    <strong><em>composer.json</em></strong>
                </div>
                <div class="col-9 padding-small">
                    {% if project.composer.description is defined %}
                        <i class="icon-text"></i>
                        {{ project.composer.description }}
                    {% endif %}
                </div>
                <div class="col-3 padding-small">
                    {% if project.composer.authors is defined %}
                        <i class="icon-user"></i>
                        {% for author in project.composer.authors %}
                            {% if author.name is defined %}
                                {% if author.email is defined %}
                                    <a href="mailto:{{ author.email }}">{{ author.name }}</a>
                                {% else %}
                                    {{ author.name }}
                                {% endif %}
                            {% endif %}
                            {% if author.role is defined %}
                                <small>{{ author.role }}</small>
                            {% endif %}
                            <br/>
                        {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</li>