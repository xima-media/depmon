<form class="filter" id="depmon-filter">
    <h3>Project</h3>
    <a href="#" class="filter-entry" data-toggle="collapse" data-target="#filter-project-collapse">
        <strong>Projects ({{ projects|length }})</strong>
    </a>
    <div id="filter-project-collapse" class="collapse">
        {% for project in projects %}
            <div class="checkbox">
                <input type="checkbox" name="project" value="{{ project.self.name }}"
                       id="filter-project-{{ project.self.name }}">
                <label for="filter-project-{{ project.self.name }}">{{ project.self.name }}</label>
            </div>
        {% endfor %}
    </div>
    <a href="#" class="filter-entry" data-toggle="collapse" data-target="#filter-type-collapse">
        <strong>Types (3)</strong> <small>beta</small>
    </a>
    <div id="filter-type-collapse" class="collapse">
        <div class="checkbox" data-tooltip="TYPO3">
            <input type="checkbox" name="project-type" value="TYPO3" id="filter-type-01">
            <label for="filter-type-01"> <i class="icon-typo3"></i></label>
        </div>
        <div class="checkbox" data-tooltip="Symfony">
            <input type="checkbox" name="project-type" value="Symfony" id="filter-type-02">
            <label for="filter-type-02"> <i class="icon-symfony"></i></label>
        </div>
        <div class="checkbox" data-tooltip="Drupal">
            <input type="checkbox" name="project-type" value="Drupal" id="filter-type-03">
            <label for="filter-type-03"> <i class="icon-drupal"></i></label>
        </div>
    </div>
    <div class="checkbox padding-small">
        <div data-tooltip="Providing a quick start overview on all available projects">
            <input type="checkbox" name="overview" value="1" id="filter-overview">
            <label for="filter-overview" class="dark">
                <small>Show overview</small>
            </label>
        </div>
    </div>
    <h3>Dependency</h3>
    <input type="text" class="search text-search" name="name" placeholder="Search dependencies ..."/>
    <div class="checkbox padding-small">
        <div data-tooltip="Show only packages which are explicitly required in the composer.json">
            <input type="checkbox" name="required" value="1" id="filter-required">
            <label for="filter-required" class="dark">
                <small>Only required packages</small>
            </label>
        </div>
    </div>
    <a href="#" class="filter-entry" data-toggle="collapse" data-target="#filter-state-collapse">
        <strong>States</strong>
    </a>
    <div id="filter-state-collapse" class="collapse">
        <div class="checkbox" data-tooltip="The available package has a higher minor or major version">
            <input type="checkbox" name="state" value="3" id="filter-state-3">
            <label for="filter-state-3"> out of date
                <span class="state state-3"></span>
            </label>
        </div>
        <div class="checkbox" data-tooltip="The available package has a higher bugfix level version">
            <input type="checkbox" name="state" value="2" id="filter-state-2">
            <label for="filter-state-2"> up to date
                <span class="state state-2"></span>
            </label>
        </div>
        <div class="checkbox" data-tooltip="The package version is up to date">
            <input type="checkbox" name="state" value="1" id="filter-state-1">
            <label for="filter-state-1"> up to date
                <span class="state state-1"></span>
            </label>
        </div>
    </div>
    <div class="padding-small text-center">
        <small>
            <a class="filter-reset no-style">
                <i class="icon-subdirectory_arrow_right"></i> Reset filter
            </a>
        </small>
    </div>
</form>
<small class="position-bottom padding-small text-muted">
    Statistic: <br/>
    {{ projects|length }} projects, {{ metadata.dependencyCount }} dependencies
    <br/><br/>
    Last updated: <br/>{{ metadata.time|date }}
</small>