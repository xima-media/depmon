{
  "name": "xima/depmon-bundle",
  "description": "The DepMon Bundle provides a full dependency monitoring application for composer based projects.",
  "type": "symfony-bundle",
  "homepage": "https://github.com/xima-media/depmon",
  "authors": [
    {
      "name": "Konrad Michalik",
      "email": "konrad.michalik@xima.de",
      "role": "Developer"
    }
  ],
  "license": "GPL-3.0-only",
  "require": {
    "ext-json": "*",
    "php": "^7.0",
    "symfony/process": "^4.0",
    "symfony/cache": "^4.0",
    "symfony/twig-bundle": "^4.0",
    "symfony/asset": "^4.0",
    "symfony/translation": "^4.0",
    "symfony/framework-bundle": "^4.1",
    "composer/semver": "^1.4",
    "symfony/monolog-bundle": "^3.3",
    "guzzlehttp/guzzle": "^6.3"
  },
  "autoload": {
    "psr-4": {
      "Xima\\DepmonBundle\\": "src/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.5",
    "squizlabs/php_codesniffer": "3.*"
  }
}
